<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= name %></title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/index.css">
    <link rel="shortcut icon" href="#" />
</head>
<body class="noScroll">
    <!-- Loader -->
    <div id="loading"></div>
    
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg bg-body-tertiary sticky-top navbar-dark bg-dark">
        <div class="container-fluid">
          <a class="navbar-brand" href="/">Pokedex</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="#">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#">Link</a>
              </li>
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                  Dropdown
                </a>
                <ul class="dropdown-menu">
                  <li><a class="dropdown-item" href="#">Action</a></li>
                  <li><a class="dropdown-item" href="#">Another action</a></li>
                  <li><hr class="dropdown-divider"></li>
                  <li><a class="dropdown-item" href="#">Something else here</a></li>
                </ul>
              </li>
              <li class="nav-item">
                <a class="nav-link disabled">Disabled</a>
              </li>
            </ul>
            <form class="d-flex" role="search">
              <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
              <button class="btn btn-outline-success" type="submit">Search</button>
            </form>
          </div>
        </div>
    </nav>
    <a class="btn btn-danger" href="/<%= prevNum %>">Previous Pokemon</a>
    <a class="btn btn-danger" href="/<%= nextNum %>">Next Pokemon</a>
    <div class="container noDisplay" id="noDisplayContainer">
        <div class="d-flex justify-content-center mb-0">
            <div class="column">
                <!-- Dex number -->
                <h1>Dex number: <%= dexNumber %></h1>
                <!-- Pokemon name -->
                <h1><%= name %></h1>
                <!-- Pokemon category -->
                <h1><%= pokemonCategory %></h1>
            </div>
        </div>
        
        
        
        <!-- Pokemon image -->
        <div class="row">
            <img class="img-fluid col-6" src="https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/home/<%= dexNumber %>.png"  alt="...">
            <img class="img-fluid col-6" src="https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/home/shiny/<%= dexNumber %>.png"  alt="...">
        </div>

        <!-- Pokemon summary -->
        <p><%= pokemonSummary %></p>

        <section class="row">
            <!-- Pokemon abilities -->
            <div class="col-3">
                <h2>Abilities:</h2>
                <% for(var i = 0; i < pokemonAbilities[0].length; i++) { %>
                    <div>
                        <h3 class="d-inline"><%= pokemonAbilities[1][i] %></h3>
                        <span class="bg-danger rounded-circle px-2 py-1 d-inline" data-toggle="tooltip" data-placement="top" title="<%= pokemonAbilities[0][i] %>">?</span>
                    </div>
                <% } %>
            </div>
        
            <!-- Pokemon height and weight -->
            <div class="col-3">
                <h2>Measurement:</h2>
                <h3>Height: <%= pokemonMeasurement[0] %>m</h3>
                <h3>Weight: <%= pokemonMeasurement[1] %>kg</h3>
            </div>
            
             <!-- Pokemon type -->
             <div class="col-3">
                <h2>Type:</h2>
                <% for(var i = 0; i < pokemonType.length; i++) { %>
                    <h3 class="<%= pokemonType[i].type.name %> rounded"><%= pokemonType[i].type.name %></h3>
                <% } %>
             </div>
             
             <!-- Pokemon cry -->
             <div class="col-3">
                <h2>Cry:</h2>
                <audio controls>
                    <source src="https://play.pokemonshowdown.com/audio/cries/<%= name %>.ogg" type="audio/ogg">
                    <source src="https://play.pokemonshowdown.com/audio/cries/<%= name %>.mp3" type="audio/mpeg">
                    Your browser does not support the audio element.
                </audio>
                
             </div>
        </section>

        
        <!-- Stats chart -->
        <h2>Stats:</h2>
        <div id="chart" data-test = '[<%= pokemonStats %>]'></div>
        <script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
        <script>
            var getStats = JSON.parse (document.getElementById('chart').dataset.test);
            var options = {
                series: [{
                data: getStats
            }],
                chart: {
                type: 'bar',
                height: 350
            },
            plotOptions: {
                bar: {
                borderRadius: 4,
                horizontal: true,
                }
            },
            dataLabels: {
                enabled: true,
                style: {
                    colors: ["#000000"]
                }
            },
            xaxis: {
                categories: ['HP', 'Attack', 'Defense', 'Special-Attack', 'Sepcial-Defense', 'Speed'],
                labels: {
                    style: {
                        colors: "#FFFFFF"
                    }
                }
            },
            yaxis: {
                labels: {
                    style: {
                        colors: "#FFFFFF"
                    }
                }
            },
            fill: {
                colors: ["#FF0000"]
            }
            };
            var chart = new ApexCharts(document.querySelector("#chart"), options);
            chart.render();
        </script>

        <!-- Pokemon evolution -->
        <section>
            <h2>Evolution:</h2>
            <% for(var i = 0; i < pokemonEvolution.length; i++) { %>
                <h3 class="" ><%= pokemonEvolution[i] %></h3>
            <% } %>
        </section>

        <!-- Pokemon varieties -->
        <% if(pokemonVarieties !== undefined ) { %>
            <section>
                <h2>Varieties:</h2>
                <% for(var i = 0; i < pokemonVarieties[0].length; i++) { %>
                    <h3 class="" ><%= pokemonVarieties[0][i] %></h3>
                    <img src="https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/home/<%= pokemonVarieties[1][i] %>.png" alt="...">
                    <img src="https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/home/shiny/<%= pokemonVarieties[1][i] %>.png" alt="...">
                <% } %>
            </section>
        <% } %>
        
    </div>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js" integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.min.js" integrity="sha384-cuYeSxntonz0PPNlHhBs68uyIAVpIIOZZ5JqeqvYYIcEL727kskC66kF92t6Xl2V" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.4/dist/jquery.slim.min.js"></script>
    <!-- Loading screen -->
    <script>
        
        function hideLoader() {
            document.getElementById('loading').style.display = 'none';
        }

        window.addEventListener('load', function () {
            document.getElementById('noDisplayContainer').classList.toggle('noDisplay');
            document.querySelector('body').classList.toggle('noScroll');
            hideLoader();
        })
        // Timeout
        setTimeout(hideLoader, 20 * 1000);

        $(document).ready(function(){
            $('[data-toggle="tooltip"]').tooltip();   
        });
    </script>
</body>
</html>

