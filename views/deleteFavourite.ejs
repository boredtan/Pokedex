<body class="noScroll">
    <!-- Loader -->
    
    <!-- Navbar -->
    <%- include('partials/navbar') %>

    <div class="container mt-3">
        <form class="d-inline" action="/favourite?_method=DELETE" method="post">
            <h1>Are you sure you want to delete this Pokemon from your favourites?</h1>  
            <input type="hidden" name="pokemonId" value="<%= favDetails._id %>">          
            <button class="btn btn-outline-success">Delete</button>
        </form>
        <a href="/favourite" class="btn btn-outline-danger">No</a>
    </div>
    


        

